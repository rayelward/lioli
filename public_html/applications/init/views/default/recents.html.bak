{{extend 'layout.html'}}

<link rel="stylesheet" href="{{=URL('static','css/default.css')}}">
<UL>


        <form ><input type="hidden" name="id" id="id" value="" /></form>
{{for row in rows:}}
    <li>
    <span class="u_id">{{=row.unique_id}}</span>
        <br><span class="body">
        {{=row.body}}
        </span>
        <br>
        <span class="age_gender">Age: {{=row.age}} Gender: {{=row.gender}}</span>
        <br/>
        <div class="vote_buttons">
        <span class="love_answer"id="love_answer{{=row.id}}" style="display: none">Loves: <span id="love_row{{=row.id}}"> {{=row.loves}}</span></span>
        <span id="love_button{{=row.id}}">
        <span onclick="jQuery('#id').val('{{=row.id}}');
                ajax('add_loves', ['id'], 'love_row{{=row.id}}');
                jQuery('#love_button{{=row.id}}').hide();
                jQuery('#love_answer{{=row.id}}').show();
                jQuery('#leave_button{{=row.id}}').hide();
                jQuery('#leave_answer{{=row.id}}').show();
                "> <input type="image" src="{{=URL('static','love_button.png')}}"  class="vote_button" width="75px", height="31px")></input></span></span>
                
        <span class="leave_answer" id="leave_answer{{=row.id}}" style="display: none">Leaves: <span id="leave_row{{=row.id}}"> {{=row.leaves}}</span></span>
        <span id="leave_button{{=row.id}}">
        <span onclick="jQuery('#id').val('{{=row.id}}');
                ajax('add_leaves', ['id'], 'leave_row{{=row.id}}');
                jQuery('#love_button{{=row.id}}').hide();
                jQuery('#love_answer{{=row.id}}').show();
                jQuery('#leave_button{{=row.id}}').hide();
                jQuery('#leave_answer{{=row.id}}').show();"
                > <button class="vote_button">{{=IMG(_src=URL('static','leave_button.png'), _alt="Leave it", _width="75px", _height="31px")}}</button></span>    
    </span>
    </div>
    </li>
    <br>
    <br>
    {{pass}}
</UL>

<!--NEED TO ADD PAGINATION -->
{{if page:}}
<a href="{{=URL(args=[page-1])}}">previous</a>
{{pass}}

{{if len(rows) >= items_per_page:}}
<a href="{{=URL(args=[page+1])}}">next</a>
{{pass}}
